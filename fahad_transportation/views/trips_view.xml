            <field name="arch" type="xml">
<!--                 colors="blue:state=='draft';gray:state=='reviewed';black:state=='confirmed';-->
<!--                                        red:state=='complete';red:state=='closed'"-->
                <tree string="Contract">
                    <field name="code"/>
