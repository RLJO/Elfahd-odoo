                    <field name="arabic_name"/>
                    <field name="aramco_no"/>
                    <field name="plat_no"/>
                    <field name="tank_aramco_no"/>
                    <field name="total_amount"/>
                    <field name="aramco_deduction"/>
                    <field name="deduct_from_driver"/>
                    <field name="product"/>
                    <field name="number_of_trips"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

